<%= simple_form_for(@qweet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :qweet, label: "Just Qweet it", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compse a new Qweet...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>